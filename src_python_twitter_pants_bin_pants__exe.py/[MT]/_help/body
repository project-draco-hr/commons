def _help(version, root_dir):
    print(('Pants %s @ PANTS_BUILD_ROOT: %s' % (version, root_dir)))
    print()
    print(('Available subcommands:\n\t%s' % '\n\t'.join(_find_all_commands())))
    print()
    print("Default subcommand flags can be stored in ~/.pantsrc using the 'options' key of a\nsection named for the subcommand in ini style format, ie:\n  [build]\n  options: --log-exit")
    _exit_and_fail()
