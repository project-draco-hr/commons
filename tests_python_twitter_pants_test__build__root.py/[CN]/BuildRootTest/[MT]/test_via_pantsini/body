def test_via_pantsini(self):
    with temporary_dir() as root:
        root = os.path.realpath(root)
        touch(os.path.join(root, 'pants.ini'))
        with pushd(root):
            self.assertEqual(root, BuildRoot().path)
        BuildRoot().reset()
        child = os.path.join(root, 'one', 'two')
        safe_mkdir(child)
        with pushd(child):
            self.assertEqual(root, BuildRoot().path)
