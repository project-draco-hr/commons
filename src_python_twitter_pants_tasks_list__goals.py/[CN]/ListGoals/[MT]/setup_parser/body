@classmethod
def setup_parser(cls, option_group, args, mkflag):
    super(ListGoals, cls).setup_parser(option_group, args, mkflag)
    option_group.add_option(mkflag('all'), dest='goal_list_all', default=False, action='store_true', help='[%default] List all goals even if no description is available.')
    option_group.add_option(mkflag('graph'), dest='goal_list_graph', action='store_true', help='[%default] Generate a graphviz graph of installed goals.')
