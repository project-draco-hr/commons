def find_root_thrifts(basedirs, sources, log=None):
    'Finds the root thrift files in the graph formed by sources and their recursive includes.\n\n  :basedirs: A set of thrift source file base directories to look for includes in.\n  :sources: Seed thrift files to examine.\n  :log: An optional logger.\n  '
    root_sources = set(sources)
    for source in sources:
        root_sources.difference_update(find_includes(basedirs, source, log=log))
    return root_sources
