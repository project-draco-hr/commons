@mock.patch('twitter.common.reviewboard.reviewboard.ReviewBoardServer.http_request')
def test_get_files(mock_method):
    mock_method.return_value = '{\n    "stat" : "ok",\n    "files" : [\n      { "id" : 123 }, { "id" : 456 }\n    ]\n  }'
    rbs = ReviewBoardServer('http://example.com', username='user', password='pass1')
    rb_id = 123
    revision = 456
    assert (len(rbs.get_files(rb_id, revision)) == 2)
    assert (mock_method.mock_calls == [call(('api/review-requests/%d/diffs/%d/files/?start=0&max-results=25' % (rb_id, revision)), None, None, {'Accept': 'application/json', }, method=None)])
