@mock.patch('twitter.common.reviewboard.reviewboard.ReviewBoardServer.http_request')
def test_get_reviews(mock_method):
    mock_method.return_value = '{\n    "stat" : "ok",\n    "reviews" : [\n      { "id" : 123 }, { "id" : 456 }\n    ]\n  }'
    rbs = ReviewBoardServer('http://example.com', username='user', password='pass1')
    rb_id = 12345
    assert (len(rbs.get_reviews(rb_id)) == 2)
    assert (mock_method.mock_calls == [call(('api/review-requests/%d/reviews/?start=0&max-results=25' % rb_id), None, None, {'Accept': 'application/json', }, method=None)])
