@mock.patch('twitter.common.reviewboard.reviewboard.ReviewBoardServer.http_request')
def test_diff_comments(mock_method):
    mock_method.return_value = '{\n    "stat" : "ok",\n    "diff_comments" : [\n      { "id" : 123 }, { "id" : 456 }\n    ]\n  }'
    rbs = ReviewBoardServer('http://example.com', username='user', password='pass1')
    rb_id = 123
    revision = 456
    file_id = 789
    assert (len(rbs.get_diff_comments(rb_id, revision, file_id)) == 2)
    mock_method.assert_called_once_with(('api/review-requests/%d/diffs/%d/files/%d/diff-comments/?start=0&max-results=25' % (rb_id, revision, file_id)), None, None, {'Accept': 'application/json', }, method=None)
