@mock.patch('twitter.common.reviewboard.reviewboard.ReviewBoardServer.http_request')
def test_get_diffs(mock_method):
    mock_method.return_value = '{\n    "stat" : "ok",\n    "diffs" : [\n      { "id" : 123 }, { "id" : 456 }\n    ]\n  }'
    rbs = ReviewBoardServer('http://example.com', username='user', password='pass1')
    rb_id = 123
    assert (len(rbs.get_diffs(rb_id)) == 2)
    mock_method.assert_called_once_with(('api/review-requests/%d/diffs/' % rb_id), None, None, {'Accept': 'application/json', }, method=None)
