def __init__(self, binary='git', gitdir=None, worktree=None, remote=None, branch=None, log=None):
    "Creates a git scm proxy that assumes the git repository is in the cwd by default.\n\n    binary:    The path to the git binary to use, 'git' by default.\n    gitdir:    The path to the repository's git metadata directory (typically '.git').\n    workspace: The path to the git repository working tree directory (typically '.').\n    remote:    The default remote to use.\n    branch:    The default remote branch to use.\n    log:       A log object that supports debug, info, and warn methods.\n    "
    Scm.__init__(self)
    self._gitcmd = binary
    self._worktree = os.path.realpath((worktree or os.getcwd()))
    self._gitdir = (os.path.realpath(gitdir) if gitdir else os.path.join(self._worktree, '.git'))
    self._remote = remote
    self._branch = branch
    if log:
        self._log = log
    else:
        from twitter.common import log as c_log
        self._log = c_log
