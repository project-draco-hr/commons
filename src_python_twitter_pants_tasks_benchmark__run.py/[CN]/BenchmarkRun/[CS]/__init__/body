def __init__(self, context):
    Task.__init__(self, context)
    config = context.config
    self.confs = config.getlist('benchmark-run', 'confs')
    self.java_args = config.getlist('benchmark-run', 'args', default=['-Xmx1g', '-XX:MaxPermSize=256m'])
    self._benchmark_bootstrap_key = 'benchmark-tool'
    benchmark_bootstrap_tools = config.getlist('benchmark-run', 'bootstrap-tools', default=[':benchmark-caliper-0.5'])
    self._bootstrap_utils.register_jvm_build_tools(self._benchmark_bootstrap_key, benchmark_bootstrap_tools)
    self._agent_bootstrap_key = 'benchmark-agent'
    agent_bootstrap_tools = config.getlist('benchmark-run', 'agent_profile', default=[':benchmark-java-allocation-instrumenter-2.1'])
    self._bootstrap_utils.register_jvm_build_tools(self._agent_bootstrap_key, agent_bootstrap_tools)
    self.caliper_args = context.options.target_class
    if context.options.memory_profiling:
        self.caliper_args += ['--measureMemory']
    if context.options.debug:
        self.java_args.extend(context.config.getlist('jvm', 'debug_args'))
        self.caliper_args += ['--debug']
