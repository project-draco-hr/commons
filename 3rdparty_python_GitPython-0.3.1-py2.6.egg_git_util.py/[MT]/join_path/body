def join_path(a, *p):
    "Join path tokens together similar to os.path.join, but always use \n\t'/' instead of possibly '' on windows."
    path = a
    for b in p:
        if b.startswith('/'):
            path += b[1:]
        elif ((path == '') or path.endswith('/')):
            path += b
        else:
            path += ('/' + b)
    return path
