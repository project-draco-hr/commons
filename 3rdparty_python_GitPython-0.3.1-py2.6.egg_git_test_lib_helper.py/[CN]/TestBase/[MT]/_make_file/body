def _make_file(self, rela_path, data, repo=None):
    '\n\t\tCreate a file at the given path relative to our repository, filled\n\t\twith the given data. Returns absolute path to created file.\n\t\t'
    repo = (repo or self.rorepo)
    abs_path = os.path.join(repo.working_tree_dir, rela_path)
    fp = open(abs_path, 'w')
    fp.write(data)
    fp.close()
    return abs_path
