def altz_to_utctz_str(altz):
    'As above, but inverses the operation, returning a string that can be used\n\tin commit objects'
    utci = ((-1) * int(((altz / 3600) * 100)))
    utcs = str(abs(utci))
    utcs = (('0' * (4 - len(utcs))) + utcs)
    prefix = (((utci < 0) and '-') or '+')
    return (prefix + utcs)
