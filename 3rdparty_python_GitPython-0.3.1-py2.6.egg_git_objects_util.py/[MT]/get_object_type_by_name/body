def get_object_type_by_name(object_type_name):
    '\n\t:return: type suitable to handle the given object type name.\n\t\tUse the type to create new instances.\n\t\t\n\t:param object_type_name: Member of TYPES\n\t\t\n\t:raise ValueError: In case object_type_name is unknown'
    if (object_type_name == 'commit'):
        import commit
        return commit.Commit
    elif (object_type_name == 'tag'):
        import tag
        return tag.TagObject
    elif (object_type_name == 'blob'):
        import blob
        return blob.Blob
    elif (object_type_name == 'tree'):
        import tree
        return tree.Tree
    else:
        raise ValueError(('Cannot handle unknown object type: %s' % object_type_name))
