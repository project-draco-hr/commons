@property
def stats(self):
    'Create a git stat from changes between this commit and its first parent \n\t\tor from all changes done if this is the very first commit.\n\t\t\n\t\t:return: git.Stats'
    if (not self.parents):
        text = self.repo.git.diff_tree(self.hexsha, '--', numstat=True, root=True)
        text2 = ''
        for line in text.splitlines()[1:]:
            (insertions, deletions, filename) = line.split('\t')
            text2 += ('%s\t%s\t%s\n' % (insertions, deletions, filename))
        text = text2
    else:
        text = self.repo.git.diff(self.parents[0].hexsha, self.hexsha, '--', numstat=True)
    return Stats._list_from_string(self.repo, text)
