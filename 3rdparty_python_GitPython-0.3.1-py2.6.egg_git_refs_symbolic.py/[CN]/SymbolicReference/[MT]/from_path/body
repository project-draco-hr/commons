@classmethod
def from_path(cls, repo, path):
    '\n\t\t:param path: full .git-directory-relative path name to the Reference to instantiate\n\t\t:note: use to_full_path() if you only have a partial path of a known Reference Type\n\t\t:return:\n\t\t\tInstance of type Reference, Head, or Tag\n\t\t\tdepending on the given path'
    if (not path):
        raise ValueError(('Cannot create Reference from %r' % path))
    for ref_type in (HEAD, Head, RemoteReference, TagReference, Reference, SymbolicReference):
        try:
            instance = ref_type(repo, path)
            if ((instance.__class__ == SymbolicReference) and instance.is_detached):
                raise ValueError('SymbolRef was detached, we drop it')
            return instance
        except ValueError:
            pass
    raise ValueError(('Could not find reference type suitable to handle path %r' % path))
