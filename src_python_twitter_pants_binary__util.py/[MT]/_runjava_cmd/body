def _runjava_cmd(jvm_options=None, classpath=None, main=None, args=None):
    cmd = ['java']
    if jvm_options:
        cmd.extend(jvm_options)
    if classpath:
        cmd.extend((('-cp' if main else '-jar'), os.pathsep.join(classpath)))
    if main:
        cmd.append(main)
    if args:
        cmd.extend(args)
    return cmd
