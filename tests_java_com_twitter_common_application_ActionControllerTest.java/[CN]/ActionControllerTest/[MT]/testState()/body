{
  Command action=control.createMock(Command.class);
  action.execute();
  control.replay();
  actionController.addAction(action);
  actionController.execute();
  actionController.execute();
  try {
    actionController.addAction(action);
    fail("Should not be ablke to register shutdown actions after shutdown");
  }
