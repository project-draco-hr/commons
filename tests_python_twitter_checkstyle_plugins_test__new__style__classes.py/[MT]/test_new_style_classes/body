def test_new_style_classes():
    nsc = NewStyleClasses(PythonFile.from_statement('\n    class OldStyle:\n      pass\n    \n    class NewStyle(object):\n      pass\n  '))
    nits = list(nsc.nits())
    assert (len(nits) == 1)
    assert (nits[0]._line_number == 1)
    assert (nits[0].code == 'T606')
    assert (nits[0].severity == Nit.ERROR)
    nsc = NewStyleClasses(PythonFile.from_statement('\n    class NewStyle(OtherThing, ThatThing, WhatAmIDoing):\n      pass\n  '))
    nits = list(nsc.nits())
    assert (len(nits) == 0)
    nsc = NewStyleClasses(PythonFile.from_statement('\n    class OldStyle():  # unspecified mro\n      pass\n  '))
    nits = list(nsc.nits())
    assert (len(nits) == 1)
    assert (nits[0].code == 'T606')
