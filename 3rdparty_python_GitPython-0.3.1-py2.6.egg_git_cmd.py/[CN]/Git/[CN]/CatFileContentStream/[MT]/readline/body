def readline(self, size=(-1)):
    if (self._nbr == self._size):
        return ''
    bytes_left = (self._size - self._nbr)
    if (size > (-1)):
        size = min(bytes_left, size)
    else:
        size = bytes_left
    data = self._stream.readline(size)
    self._nbr += len(data)
    if ((self._size - self._nbr) == 0):
        self._stream.read(1)
    return data
