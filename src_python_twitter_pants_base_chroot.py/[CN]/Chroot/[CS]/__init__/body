def __init__(self, root, chroot_base, name='chroot'):
    "\n      root = source directory for files\n      chroot_base = base directory for the creation of the target chroot (e.g. 'dist')\n      name = prefix of the temporary directory used in the creation of this chroot\n    "
    self.root = root
    try:
        _safe_mkdir(chroot_base)
    except:
        raise Chroot.ChrootException(('Unable to create chroot in %s' % chroot_base))
    self.chroot = tempfile.mkdtemp(dir=chroot_base, prefix=('%s.' % name))
    self.name = name
    self.filesets = {}
