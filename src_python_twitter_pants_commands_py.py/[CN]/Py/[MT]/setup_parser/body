def setup_parser(self, parser, args):
    parser.set_usage('\n  %prog py (options) [spec] args\n')
    parser.disable_interspersed_args()
    parser.add_option('--pex', dest='pex', default=False, action='store_true', help='dump a .pex of this chroot')
    parser.add_option('--resolve', dest='resolve', default=False, action='store_true', help='resolve targets instead of building.')
    parser.epilog = 'Interact with the chroot of the specified target.'
