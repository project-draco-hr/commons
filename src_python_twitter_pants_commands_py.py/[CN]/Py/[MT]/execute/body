def execute(self):
    if self.options.verbose:
        print(('Build operating on target: %s %s' % (self.target, (('Extra targets: %s' % ' '.join(map(str, self.extra_targets))) if self.extra_targets else ''))))
    if self.options.resolve:
        executor = PythonResolver(([self.target] + self.extra_targets))
        executor.dump()
        return 0
    executor = PythonChroot(self.target, self.root_dir, extra_targets=self.extra_targets, conn_timeout=self.options.conn_timeout)
    builder = executor.dump()
    if self.options.pex:
        pex_name = os.path.join(self.root_dir, 'dist', ('%s.pex' % self.target.name))
        builder.build(pex_name)
        print(('Wrote %s' % pex_name))
        return 0
    else:
        builder.freeze()
        pex = PEX(builder.path())
        po = pex.run(args=list(self.args), blocking=False)
        try:
            po.wait()
        except KeyboardInterrupt:
            po.send_signal(signal.SIGINT)
            raise
