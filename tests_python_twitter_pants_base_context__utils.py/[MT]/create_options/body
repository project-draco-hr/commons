def create_options(options_hash=None):
    'Creates an options object populated with no options at all by default.\n\n  :param dict options_hash: An optional dict of option values.\n  '
    opts = (options_hash or {})
    if (not isinstance(opts, dict)):
        raise ValueError(('The given options_hash must be a dict, got: %s' % options_hash))


    class Options(object):

        def __init__(self):
            self.__dict__ = opts
    return Options()
