@unbare_repo
def module(self):
    ':return: Repo instance initialized from the repository at our submodule path\n\t\t:raise InvalidGitRepositoryError: if a repository was not available. This could \n\t\t\talso mean that it was not yet initialized'
    module_path = self.abspath
    try:
        repo = git.Repo(module_path)
        if (repo != self.repo):
            return repo
    except (InvalidGitRepositoryError, NoSuchPathError):
        raise InvalidGitRepositoryError(('No valid repository at %s' % self.path))
    else:
        raise InvalidGitRepositoryError(('Repository at %r was not yet checked out' % module_path))
