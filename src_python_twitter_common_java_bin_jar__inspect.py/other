import os
from zipfile import ZipFile
from twitter.common import options
from twitter.common.java.class_file import ClassFile
if (__name__ == '__main__'):
    (values, args) = options.parse()
    for arg in args:
        if arg.endswith('.jar'):
            print ('from %s' % arg)
            zp = ZipFile(arg)
            for f in zp.filelist:
                if f.filename.endswith('.class'):
                    print 
                    print 
                    print ('%s' % f.filename),
                    foo = ClassFile(zp.read(f.filename))
                    print (' => methods:%s, interfaces:%s' % (len(foo.methods()), len(foo.interfaces())))
                    print foo
            zp.close()
