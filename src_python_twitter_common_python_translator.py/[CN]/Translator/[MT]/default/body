@staticmethod
def default(install_cache=None, platform=Platform.current(), interpreter=PythonInterpreter.get(), conn_timeout=None):
    shared_options = dict(install_cache=install_cache, interpreter=interpreter, conn_timeout=conn_timeout)
    egg_translator = EggTranslator(platform=platform, **shared_options)
    source_translator = SourceTranslator(**shared_options)
    return ChainedTranslator(egg_translator, source_translator)
