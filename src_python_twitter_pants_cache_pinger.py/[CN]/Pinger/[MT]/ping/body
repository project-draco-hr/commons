def ping(self, host):
    proc = subprocess.Popen(['ping', '-t', '1', '-c', '1', '-q', host], stdout=subprocess.PIPE, stderr=subprocess.PIPE)
    (out, error) = proc.communicate()
    out = out.strip()
    mo = _ping_re.search(out.strip())
    if mo:
        return float(mo.group(2))
    else:
        return None
