{
  assertEquals("/",Group.normalizePath("///"));
  assertEquals("/a/group",Group.normalizePath("/a/group"));
  assertEquals("/a/group",Group.normalizePath("/a/group/"));
  assertEquals("/a/group",Group.normalizePath("/a//group"));
  assertEquals("/a/group",Group.normalizePath("/a//group//"));
  try {
    Group.normalizePath("a/group");
    fail("Relative paths should not be allowed.");
  }
 catch (  IllegalArgumentException e) {
  }
  try {
    Group.normalizePath("/a/./group");
    fail("Relative paths should not be allowed.");
  }
 catch (  IllegalArgumentException e) {
  }
  try {
    Group.normalizePath("/a/../group");
    fail("Relative paths should not be allowed.");
  }
 catch (  IllegalArgumentException e) {
  }
}
