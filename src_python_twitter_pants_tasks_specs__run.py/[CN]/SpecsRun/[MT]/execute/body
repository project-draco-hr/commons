def execute(self, targets):
    if (not self.skip):

        def run_tests(tests):
            opts = (['--color'] if self.color else [])
            opts.append(('--specs=%s' % ','.join(tests)))
            result = runjava_indivisible(jvmargs=self.java_args, classpath=self.classpath(profile_classpath(self.profile), confs=self.confs), main='com.twitter.common.testing.ExplicitSpecsRunnerMain', opts=opts)
            if (result != 0):
                raise TaskError()
        if self.tests:
            run_tests(self.tests)
        else:
            with safe_args(self.calculate_tests(targets)) as tests:
                if tests:
                    run_tests(tests)
