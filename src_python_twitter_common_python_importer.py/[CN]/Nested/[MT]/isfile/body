@staticmethod
def isfile(path):
    '\n      Read the contents of a potentially nested file.\n    '
    hit = Nested._ISFILE_CACHE.get(path, None)
    if (hit is not None):
        return hit
    if os.path.isfile(path):
        Nested._ISFILE_CACHE[path] = True
        return True
    (dirname, basename) = os.path.split(path)
    if (not basename):
        Nested._ISFILE_CACHE[path] = False
        return False
    (archive, prefix, zf) = Nested.open(dirname)
    try:
        zf.getinfo(os.path.join(prefix, basename))
        Nested._ISFILE_CACHE[path] = True
        return True
    except KeyError:
        Nested._ISFILE_CACHE[path] = False
        return False
