def __init__(self, context, strict=False, verbose=True):
    NailgunTask.__init__(self, context)
    self.strict = strict
    self.verbose = verbose
    for info in INFO_FOR_COMPILER.values():
        config = info['config']
        bootstrap_tools = context.config.getlist(config, 'bootstrap-tools', default=[(':%s' % config)])
        self._bootstrap_utils.register_jvm_build_tools(config, bootstrap_tools)
