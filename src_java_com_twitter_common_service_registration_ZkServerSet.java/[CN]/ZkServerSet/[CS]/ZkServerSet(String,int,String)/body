{
  Preconditions.checkNotNull(host);
  Preconditions.checkArgument(port > 0 && port < MAX_SOCKET_NUMBER,"port must be > 0 and < 0xFFFF");
  Preconditions.checkNotNull(path);
  this.host=host;
  this.port=port;
  this.path=path;
  zkClient=new ZooKeeperClient(Amount.of(ZK_TIMEOUT,Time.SECONDS),ImmutableList.of(InetSocketAddress.createUnresolved(host,port)));
  zkClient.register(new MyWatcher());
  group=new Group(zkClient,ZooDefs.Ids.OPEN_ACL_UNSAFE,path,"server_");
  sset=new com.twitter.common.zookeeper.ServerSetImpl(zkClient,group);
}
