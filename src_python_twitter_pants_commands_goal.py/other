try:
    import daemon

    def _async_cautious_rmtree(root):
        if os.path.exists(root):
            new_path = (root + ('.deletable.%f' % time.time()))
            os.rename(root, new_path)
            with daemon.DaemonContext():
                _cautious_rmtree(new_path)
except ImportError:
    pass
