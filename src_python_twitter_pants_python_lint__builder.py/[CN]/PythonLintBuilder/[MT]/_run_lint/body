def _run_lint(self, target, args):
    chroot = PythonChroot(target, self.root_dir, extra_targets=[Target.get(Address.parse(self.root_dir, '3rdparty/python:pylint'))])
    builder = chroot.dump()
    builder.info().entry_point = 'pylint.lint'
    builder.freeze()
    interpreter_args = [('--rcfile=%s' % os.path.join(self.root_dir, 'build-support', 'pylint', 'pylint.rc'))]
    interpreter_args.extend((args or []))
    sources = OrderedSet([])
    target.walk((lambda trg: sources.update((trg.sources if (hasattr(trg, 'sources') and (trg.sources is not None)) else []))))
    pex = PEX(builder.path())
    pex.run(args=(interpreter_args + list(sources)), with_chroot=True)
