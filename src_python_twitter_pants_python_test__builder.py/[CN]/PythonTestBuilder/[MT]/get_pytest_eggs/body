@staticmethod
def get_pytest_eggs(root):
    specs = ['3rdparty/python:pytest']
    eggs = []
    for spec in specs:
        address = Address.parse(root, spec)
        target = Target.get(address)

        def add_eggs(target):
            deps = []
            for dep in target.dependencies:
                if isinstance(dep, PythonEgg):
                    for egg in dep.eggs:
                        eggs.append(egg)
                else:
                    deps.append(dep)
            return deps
        target.walk((lambda t: add_eggs(t)))
    return eggs
