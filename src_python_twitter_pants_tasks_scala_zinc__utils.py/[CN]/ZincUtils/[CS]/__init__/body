def __init__(self, context, nailgun_task, color, bootstrap_utils):
    self.context = context
    self._nailgun_task = nailgun_task
    self._color = color
    self._bootstrap_utils = bootstrap_utils
    self._pants_home = get_buildroot()
    self._compile_bootstrap_tools = context.config.getlist('scala-compile', 'compile-bootstrap-tools', default=[':scala-compile-2.9.2'])
    self._zinc_bootstrap_tools = context.config.getlist('scala-compile', 'zinc-bootstrap-tools', default=[':zinc'])
    self._plugin_bootstrap_tools = context.config.getlist('scala-compile', 'scalac-plugin-bootstrap-tools', default=[])
    bootstrap_utils.register_all([self._compile_bootstrap_tools, self._zinc_bootstrap_tools, self._plugin_bootstrap_tools])
    self._main = context.config.get('scala-compile', 'main')
    self._jvm_args = context.config.getlist('scala-compile', 'jvm_args')
    self._java_home = os.path.realpath(os.path.dirname(find_java_home()))
    self._ivy_home = os.path.realpath(context.config.get('ivy', 'cache_dir'))
