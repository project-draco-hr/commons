{
  if (this.status != status) {
    this.status=status;
    if (Status.DEAD == status) {
      try {
        membership.cancel();
      }
 catch (      JoinException e) {
        throw new UpdateException("Failed to auto-cancel group membership on transition to DEAD status",e);
      }
    }
 else {
      try {
        membership.updateMemberData();
      }
 catch (      Group.UpdateException e) {
        throw new UpdateException("Failed to update service data for: " + membership.getMemberPath(),e);
      }
    }
  }
}
