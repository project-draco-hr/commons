def test_premature_end_of_stream_mid_message():
    with EphemeralFile('w') as fp:
        fn = fp.name
        fp.write(struct.pack('>L', 2))
        fp.write('a')
        fp.close()
        with open(fn) as fpr:
            rr = RecordReader(fpr)
            with pytest.raises(RecordIO.PrematureEndOfStream):
                rr.read()
