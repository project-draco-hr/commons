def test_basic_recordwriter_write():
    test_string = 'hello world'
    with EphemeralFile('w') as fp:
        fn = fp.name
        rw = RecordWriter(fp)
        rw.write(test_string)
        rw.close()
        with open(fn) as fpr:
            rr = RecordReader(fpr)
            assert (rr.read() == test_string)
