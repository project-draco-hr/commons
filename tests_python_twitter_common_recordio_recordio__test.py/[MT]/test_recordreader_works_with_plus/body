def test_recordreader_works_with_plus():
    with EphemeralFile('a+') as fp:
        try:
            RecordReader(fp)
        except:
            assert False, 'Failed to initialize RecordWriter in r+ mode'
    with EphemeralFile('w+') as fp:
        try:
            RecordReader(fp)
        except:
            assert False, 'Failed to initialize RecordWriter in r+ mode'
