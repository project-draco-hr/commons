{
  if (clazz.isInterface() || Modifier.isAbstract(clazz.getModifiers()) || !Modifier.isPublic(clazz.getModifiers())) {
    return false;
  }
  if (junit.framework.Test.class.isAssignableFrom(clazz)) {
    return true;
  }
  if (clazz.isAnnotationPresent(RunWith.class)) {
    return true;
  }
  return Iterables.any(Arrays.asList(clazz.getMethods()),new Predicate<Method>(){
    @Override public boolean apply(    Method method){
      return Modifier.isPublic(method.getModifiers()) && method.isAnnotationPresent(org.junit.Test.class);
    }
  }
);
}
