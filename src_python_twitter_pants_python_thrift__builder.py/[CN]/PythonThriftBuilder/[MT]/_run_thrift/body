def _run_thrift(self, source):
    thrift_file = source
    thrift_abs_path = os.path.abspath(thrift_file)
    args = [select_thrift_binary(self.config), '--gen', 'py:new_style', '-o', self.codegen_root]
    args.extend(['-I', self._workdir])
    args.append(thrift_abs_path)
    po = subprocess.Popen(args, cwd=self.chroot.path())
    rv = po.wait()
    if (rv != 0):
        comm = po.communicate()
        print('thrift generation failed!', file=sys.stderr)
        print('STDOUT', file=sys.stderr)
        print(comm[0], file=sys.stderr)
        print('STDERR', file=sys.stderr)
        print(comm[1], file=sys.stderr)
    return (rv == 0)
