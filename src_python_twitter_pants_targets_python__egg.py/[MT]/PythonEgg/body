@manual.builddict(tags=['python'])
def PythonEgg(glob, name=None):
    "Refers to pre-built Python eggs in the file system. (To instead fetch\n  eggs in a ``pip``/``easy_install`` way, use ``python_requirement``)\n\n  E.g., ``egg(name='foo', glob='foo-0.1-py2.6.egg')`` would pick up the\n  file ``foo-0.1-py2.6.egg`` from the ``BUILD`` file's directory; targets\n  could depend on it by name ``foo``.\n\n  :param string glob: File glob pattern.\n  :param string name: Target name; by default uses the egg's project name.\n  "
    eggs = fsglob(ParseContext.path(glob))
    requirements = set()
    for egg in eggs:
        if os.path.isdir(egg):
            metadata = PathMetadata(egg, os.path.join(egg, 'EGG-INFO'))
        else:
            metadata = EggMetadata(zipimporter(egg))
        dist = Distribution.from_filename(egg, metadata=metadata)
        requirements.add(dist.as_requirement())
    if (len(requirements) > 1):
        raise ValueError(('Got multiple egg versions! => %s' % requirements))
    return PythonRequirement(str(requirements.pop()), name=name)
