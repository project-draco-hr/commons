def add_infos(self, *keyvals):
    with open(self._info_file, 'a') as outfile:
        for (key, val) in keyvals:
            key = key.strip()
            val = str(val).strip()
            if (':' in key):
                raise Exception, 'info key must not contain a colon'
            outfile.write(('%s: %s\n' % (key, val)))
            self._info[key] = val
