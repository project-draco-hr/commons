@contextmanager
def temporary_dir(root_dir=None, cleanup=True):
    '\n    A with-context that creates a temporary directory.\n\n    You may specify the following keyword args:\n      root_dir [path]: The parent directory to create the temporary directory.\n      cleanup [True/False]: Whether or not to clean up the temporary directory.\n\n    Important note: If you fork inside the context, make sure only one tine\n    performs cleanup (e.g., by calling os._exit() in the child).\n  '
    path = tempfile.mkdtemp(dir=root_dir)
    try:
        yield path
    finally:
        if cleanup:
            shutil.rmtree(path, ignore_errors=True)
