@contextmanager
def temporary_file_path(root_dir=None, cleanup=True):
    '\n    A with-context that creates a temporary file and returns its path.\n\n    You may specify the following keyword args:\n      root_dir [path]: The parent directory to create the temporary file.\n      cleanup [True/False]: Whether or not to clean up the temporary file.\n  '
    with temporary_file(root_dir, cleanup) as fd:
        fd.close()
        yield fd.name
