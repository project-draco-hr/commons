@classmethod
def new_from_sha(cls, repo, sha1):
    '\n\t\t:return: new object instance of a type appropriate to represent the given \n\t\t\tbinary sha1\n\t\t:param sha1: 20 byte binary sha1'
    if (sha1 == cls.NULL_BIN_SHA):
        return get_object_type_by_name('commit')(repo, sha1)
    oinfo = repo.odb.info(sha1)
    inst = get_object_type_by_name(oinfo.type)(repo, oinfo.binsha)
    inst.size = oinfo.size
    return inst
