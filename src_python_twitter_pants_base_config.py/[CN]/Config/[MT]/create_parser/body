@staticmethod
def create_parser(defaults=None):
    "\n      Creates a config parser that supports %([key-name])s value substitution.  Any defaults\n      supplied will act as if specified in the loaded config file's DEFAULT section and be available\n      for substitutions.  The 'buildroot', invoking 'user' and invoking user's 'homedir' are\n      automatically defaulted.\n    "
    standard_defaults = dict(buildroot=get_buildroot(), homedir=os.path.expanduser('~'), user=getpass.getuser())
    if defaults:
        standard_defaults.update(defaults)
    return ConfigParser.SafeConfigParser(standard_defaults)
