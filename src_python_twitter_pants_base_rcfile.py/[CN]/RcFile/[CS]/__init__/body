def __init__(self, paths, default_prepend=True, process_default=False):
    '\n    :param paths: The rcfiles to apply default subcommand options from.\n    :param default_prepend: Whether to prepend (the default) or append if default options\n      are specified with the ``options`` key.\n    :param process_default: True to process options in the [DEFAULT] section and apply\n      regardless of goal.\n    '
    self.default_prepend = default_prepend
    self.process_default = process_default
    if (not paths):
        raise ValueError('One or more rcfile paths must be specified')
    if isinstance(paths, Compatibility.string):
        paths = [paths]
    self.paths = [os.path.expanduser(path) for path in paths]
